{
    "name": "ironedge/workflow-engine",
    "description": "A Workflow Engine easy to use, with multiple storages available and simple to integrate with any existing application.",
    "keywords": ["workflow", "engine", "frenzy", "framework"],
    "homepage": "http://www.ironedgesoftware.com",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gustavo Falco",
            "email": "comfortablynumb84@gmail.com",
            "homepage": "http://www.ironedgesoftware.com/"
        }
    ],
    "support": {
        "issues": "https://github.com/ironedgesoftware/workflow-engine/issues"
    },
    "require": {
        "php":                          "^7.0",

        "ironedge/config":              "^1.0",
        "ironedge/cache":               "^1.0",
        "ironedge/graphs":              "^1.0",

        "psr/log":                      "^1.0",

        "symfony/dependency-injection": "^3.0",
        "symfony/event-dispatcher":     "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit":              "^4.5 || ^5.0.5",
        "phpunit/phpunit-mock-objects": "2.3.0 || ^3.0"
    },
    "autoload": {
        "psr-4": {
            "IronEdge\\Component\\WorkflowEngine\\": "src",
            "IronEdge\\Component\\WorkflowEngine\\Test\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}